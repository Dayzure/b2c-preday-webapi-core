@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

@{
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Minimalistic Web API Protected By Azrue AD B2C</title>


    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>

<body>

    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
        <a class="navbar-brand" href="/">Home</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarsExampleDefault">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="api/StretchChallenge">API</a>
                </li>
            </ul>
        </div>
    </nav>

    <main role="main" class="container">

        <div class="jumbotron jumbotron-fluid">
            <div class="container">
                <h1 class="display-4">Minimalistic Web API protected by B2C</h1>
                <p class="lead">Configure the Web API with respective values in Application Settings from Azrue Portal.</p>
            </div>
        </div>

        <div class="starter-template">
            <p class="lead">
                The following Configuration is requried:
            </p>

            <table class="table-hover table-condensed table-striped">
                <tr>
                    <th>Application Setting Name</th>
                    <th>Current Value</th>
                    <th>Description</th>
                </tr>
                <tr>
                    <td>AzureAdB2C:Instance</td>
                    <td>@Configuration.GetSection("AzureAdB2C")["Instance"]</td>
                    <td>The instance of B2C (e.g. https://<strong>snetga</strong>.b2clogin.com/tfp/)</td>
                </tr>
                <tr>
                    <td>AzureAdB2C:ClientId</td>
                    <td>@Configuration.GetSection("AzureAdB2C")["ClientId"]</td>
                    <td>the cliend id (application id) of your registered application for this Web API (e.g. 11111111-2222-3333-4444-0123456789ab)</td>
                </tr>
                <tr>
                    <td>AzureAdB2C:Domain</td>
                    <td>@Configuration.GetSection("AzureAdB2C")["Domain"]</td>
                    <td>the full name of your B2C domain with <strong>.onmicrosoft.com</strong> (e.g. snetga.onmicrosoft.com)</td>
                </tr>
                <tr>
                    <td>AzureAdB2C:SignUpSignInPolicyId</td>
                    <td>@Configuration.GetSection("AzureAdB2C")["SignUpSignInPolicyId"]</td>
                    <td>the id of your edit profile policy - built-in or custom (e.g. B2C_1A_signup_signin_google)</td>
                </tr>
            </table>
        </div>

    </main><!-- /.container -->
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>