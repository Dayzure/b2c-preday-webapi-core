{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "siteName": {
      "type": "string"
    },
    "location": {
        "type": "string",
        "defaultValue": "[resourceGroup().location]",
        "metadata":{
            "description": "Location for all resources."
        }
    }
  },
  "variables": {
    "repoUrl": "https://github.com/Dayzure/b2c-preday-webapi-core",
    "branch": "deploy-over-portal",
    "hostingPlanName": "[concat('webapphostingplan-', uniquestring(resourceGroup().id))]"
  },
  "resources": [
    {
      "apiVersion": "2014-06-01",
      "location": "[parameters('location')]",
      "name": "[variables('hostingPlanName')]",
      "properties": {
        "name": "[variables('hostingPlanName')]",
        "sku": "Basic",
        "workerSize": "Small",
        "numberOfWorkers": 1
      },
      "type": "Microsoft.Web/serverFarms"
    },
    {
      "apiVersion": "2014-06-01",
      "name": "[parameters('siteName')]",
      "type": "Microsoft.Web/Sites",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[concat('Microsoft.Web/serverFarms/', variables('hostingPlanName'))]"
      ],
      "tags": {
        "[concat('hidden-related:', resourceGroup().id, '/providers/Microsoft.Web/serverfarms/', variables('hostingPlanName'))]": "empty"
      },
      "properties": {
        "name": "[parameters('siteName')]",
        "serverFarm": "[variables('hostingPlanName')]"
      },
      "resources": [
        {
          "apiVersion": "2018-11-01",
          "type": "config",
          "name": "web",
          "dependsOn": [
            "[concat('Microsoft.Web/Sites/', parameters('siteName'))]"
          ],
          "properties": {
            "appSettings": [
              {
                "name": "AzureAdB2C:Instance",
                "value": "https://snetga.b2clogin.com/tfp/"
              },
              {
                "name": "AzureAdB2C:ClientId",
                "value": "11111111-2222-3333-4444-0123456789ab"
              },
              {
                "name": "AzureAdB2C:Domain",
                "value": "snetga.onmicrosoft.com"
              },
              {
                "name": "AzureAdB2C:SignUpSignInPolicyId",
                "value": "b2c_1_empty"
              }
            ]
          }
        },
        {
          "apiVersion": "2018-11-01",
          "name": "web",
          "type": "sourcecontrols",
          "dependsOn": [
            "[resourceId('Microsoft.Web/Sites', parameters('siteName'))]",
            "[concat('Microsoft.Web/Sites/', parameters('siteName'), '/config/web')]"
          ],
          "properties": {
            "RepoUrl": "[variables('repoUrl')]",
            "branch": "[variables('branch')]",
            "IsManualIntegration": true
          }
        },
        {
          "name": "MSDeploy",
          "type": "extensions",
          "location": "[resourceGroup().location]",
          "apiVersion": "2018-11-01",
          "dependsOn": [
            "[resourceId('Microsoft.Web/Sites', parameters('siteName'))]"
          ],
          "tags": {
            "displayName": "webDeploy"
          },
          "properties": {
            "packageUri": "[concat(variables('repoUrl'),'/raw/',variables('branch'),'/msdeploy/b2c-webapi-core.zip')]",
            "dbType": "None",
            "connectionString": "",
            "setParameters": {
              "IIS Web Application Name": "[parameters('siteName')]"
            }
          }
        }
      ]
    }
  ]
}